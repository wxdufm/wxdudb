extends ../layout

block variables
  - var title = release.title + ' by ' + release.artist

block content
  .container
    .row
      .col-xs-12
        h1 #{release.title} by #{release.artist}
        table.table
          each val, key in releaseDisplay
            tr
              td= key
              td= val
    ul.button-list
      li
        a.btn.btn-default(href='/releases/' + release._id + '/edit' role="button") Edit
      li
        a.btn.btn-danger.delete-confirm(href='/releases/' + release._id role="button") Delete
